{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true,
    }
  ],
  "ignorePaths": [
    "docs/",
  ],
  "git-submodules": {
    "enabled": true
  }
}
